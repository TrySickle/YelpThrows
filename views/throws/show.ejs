<% include ./../partials/header %>

<h1><%= yoyo.name %></h1>

<img src="<%= yoyo.image %>" class="img-responsive">

<p><%= yoyo.description %></p>

<p>
    <a href="/throws/<%=yoyo._id%>/comments/new" class="btn btn-primary">Add New Comment</a>
</p>

<% yoyo.comments.forEach(function(comment) { %>
    <p><strong><%= comment.author %></strong> - <%= comment.text %>
<% }); %>


